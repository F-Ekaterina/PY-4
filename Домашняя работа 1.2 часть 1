Домашняя работа 1.2 часть 1
#комнат, цена, площадь, парковка, метро, перв/втор, этаж, этажей
flats=([1,2759730, 20.1,"нет парковки",1,"перв",2,25],\
[1,2369234, 16.0,"нет парковки",10,"перв",6,14],\
[1,3383160, 24.2,"нет парковки",1,"перв",1,25],\
[1,3500000, 17.4,"нет парковки",9,"втор",1,25],\
[1,3200000, 12.6,"нет парковки",8,"втор",5,5],\
[1,2801430, 18.3,"нет парковки",10,"перв",9,14],\
[1,3496150, 24.5,"нет парковки",1,"перв",22,25],\
[1,3400000,15.0,"есть парковка",20,"втор",5,5],\
[1,3300000, 33.0,"нет парковки",15,"втор",3,5],\
[2,2999000,60,"есть парковка",16,"втор",3,3],\
[1,3490000, 17.4,"есть парковка",4,"втор",1,5])

while True:
  
  for i,flat in enumerate(flats):
    if "перв" in flat[5] and 2<=flat[6]!=flat[7]:
      print(("{0}.{1}").format(i,flat))


  print('какой у вас бюджет?(введите q, чтобы закончить)')
  user_input=input()
  if user_input=="q":
    break
  print('сколько можете платить в месяц?(введите q,чтобы закончить)')
  monthly=int(input())
  if (user_input=="q"):
    break
  
  
  for i,flat in enumerate(flats): 
    if flat[1]<=int(user_input):
      print(("{0}.{1}").format(i,flat))
  
  for i,flat in enumerate(flats): 
    if flat[1]<=int(user_input):
      print(("{0}.{1}").format(i,flat))
      print(("На эту квартиру вам придется работать {0:.3}месяцев или {1:.3}лет").format(flat[1]/monthly,flat[1]/(monthly*12)))
print('расчет закончен')
